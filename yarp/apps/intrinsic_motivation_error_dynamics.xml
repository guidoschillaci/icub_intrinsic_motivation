<application>
<name>intrinsic motivation</name>
    <module>
        <name>iCubGui</name>
        <node>localhost</node>
        <parameters>--xpos 1000 --ypos 100 --width 370</parameters>
        <stdio></stdio>
        <tag>iCubGui</tag>
    </module>
    <module>
        <name>iCub_SIM</name>
        <node>localhost</node>
        <parameters></parameters>
        <stdio></stdio>
        <tag>iCub_SIM</tag>
    </module>
    <module>
        <name>yarpview</name>
        <node>localhost</node>
        <parameters>--name /leftCam --x 0 --y 0 --RefreshTime 33</parameters>
        <tag>viewer</tag>
    </module>
    <module>
        <name>yarpview</name>
        <node>localhost</node>
        <parameters>--name /rightCam --x 350 --y 0 --RefreshTime 33</parameters>
        <tag>viewer</tag>
    </module>
    <connection>
        <from>/icubSim/cam/left</from>
        <to>/leftCam</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
        <from>/icubSim/cam/right</from>
        <to>/rightCam</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
        <from>/icubSim/head/state:o</from>
        <to>/iCubGui/head:i</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/icubSim/left_arm/state:o</from>
        <to>/iCubGui/left_arm:i</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/icubSim/right_arm/state:o</from>
        <to>/iCubGui/right_arm:i</to>
        <protocol>udp</protocol>
    </connection>
</application>
